<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    >
    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
        >
        <com.github.browep.ratiobuttons.view.RatioButton
            android:layout_height="0dip"
            android:layout_width="120dip"
            app:percent_of_width="0.5"
            android:text="0.5" />

        <com.github.browep.ratiobuttons.view.RatioToggleButton
            android:layout_height="0dip"
            android:layout_width="120dip"
            app:percent_of_width="0.5"
            android:textOn="0.5"
            android:textOff="1/2"
            />

        <com.github.browep.ratiobuttons.view.RatioButton
            android:layout_height="0dip"
            android:layout_width="120dip"
            app:percent_of_width="0.666"
            android:text="0.666" />

        <com.github.browep.ratiobuttons.view.RatioButton
            android:layout_height="0dip"
            android:layout_width="120dip"
            app:percent_of_width="1"
            android:text="1" />

        <com.github.browep.ratiobuttons.view.RatioButton
            android:layout_height="0dip"
            android:layout_width="120dip"
            app:percent_of_width="1.33"
            android:text="1.33" />

        <com.github.browep.ratiobuttons.view.RatioButton
            android:layout_height="0dip"
            android:layout_width="120dip"
            app:percent_of_width="1.618"
            android:text="1.618 (Golden Ratio)" />

        <com.github.browep.ratiobuttons.view.RatioButton
            android:layout_height="0dip"
            android:layout_width="120dip"
            app:percent_of_width="0.618"
            android:text="0.618 (Golden Ratio)" />

        <com.github.browep.ratiobuttons.view.RatioButton
            android:layout_height="0dip"
            android:layout_width="120dip"
            app:percent_of_width="2"
            android:text="2" />

    </LinearLayout>
</ScrollView>


